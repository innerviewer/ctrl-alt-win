---
const { current } = Astro.props ?? {};

const links = [
  { id: "accueil", href: "/index.html", label: "Accueil" },
  { id: "nird", href: "/nird.html", label: "NIRD" },
  { id: "capgemini", href: "/capgemini.html", label: "Capgemini" },
  { id: "femmes", href: "/femmes-informatique.html", label: "Femmes & Info" },
  { id: "ergonomie", href: "/ergonomie.html", label: "Ergonomie" },
];
---

<header class="header">
  <div class="header-panel">
    <a href="/index.html" class="brand">
      <div class="brand-logo">CAW</div>
      <span class="brand-title">CTRL+ALT+WIN</span>
    </a>

    <nav class="nav" aria-label="Navigation principale">
      {links.map((link) => (
        <a
          href={link.href}
          class={current === link.id ? "nav-link is-active" : "nav-link"}
        >
          {link.label}
        </a>
      ))}
    </nav>
  </div>
</header>

<style>
  /* Reset de base pour virer le bleu et les soulignements */
  :global(a) {
    color: inherit;
    text-decoration: none;
  }

  .header {
    position: absolute;
    top: 32px;
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    z-index: 20;
    font-family: sans-serif;
    color: white;
  }

  .header-panel {
    background: rgba(0, 0, 0, 0.7);       /* noir sobre */
    backdrop-filter: blur(20px);          /* blur fort */
    -webkit-backdrop-filter: blur(20px);
    padding: 14px 22px;
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.1);

    display: flex;
    align-items: center;
    gap: 18px;
  }

  /* Brand */

  .brand {
    display: flex;
    align-items: center;
    gap: 12px;
    white-space: nowrap;
  }

  .brand-logo {
    padding: 8px 16px;
    border-radius: 14px;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 1);
    font-size: 0.8rem;
    font-weight: 700;
    letter-spacing: 0.12em;
    text-transform: uppercase;
  }

  .brand-title {
    font-size: 0.8rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: #d4d4d4;
  }

  /* Nav = rang√©e de boutons */

  .nav {
    margin-left: auto;
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .nav-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;

    padding: 7px 14px;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.08);
    border: 1px solid rgba(255, 255, 255, 1);

    font-size: 0.72rem;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    cursor: pointer;

    transition:
      transform 0.18s ease-out,
      background 0.18s ease-out,
      box-shadow 0.18s ease-out;
  }

  /* Hover : grossit + gris plus clair */
  .nav-link:hover {
    transform: scale(1.05);
    background: rgba(200, 200, 200, 0.25);  /* gris clair */
  }

  .nav-link:active {
    transform: scale(0.97);
  }

  .nav-link.is-active {
    background: rgba(220, 220, 220, 0.35);
  }

  /* Responsive */

  @media (max-width: 640px) {
    .header-panel {
      flex-direction: column;
      align-items: stretch;
      gap: 10px;
    }

    .brand {
      justify-content: center;
    }

    .nav {
      justify-content: center;
    }
  }
</style>



