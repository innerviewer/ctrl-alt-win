---
const { current } = Astro.props ?? {};

const links = [
  { id: "accueil", href: "/index.html", label: "Accueil" },
  { id: "nird", href: "/entroisdimensions.html", label: "En 3 Dimensions" },
  { id: "capgemini", href: "/capgemini.html", label: "Capgemini" },
  { id: "ergonomie", href: "/ergonomie.html", label: "Ergonomie" },
];
---

<header class="header">
  <!-- <div class="header-panel"> -->
    <a href="/index.html" class="brand">
      <div class="brand-logo">CAW</div>
      <span class="brand-title">CTRL+ALT+WIN</span>
    </a>

    <nav class="nav" aria-label="Navigation principale">
      {links.map((link) => (
        <a
          href={link.href}
          class={current === link.id ? "nav-link is-active" : "nav-link"}
        >
          {link.label}
        </a>
      ))}
    </nav>
  <!-- </div> -->
</header>

<style>
  /* Reset de base pour virer le bleu et les soulignements */
  :global(a) {
    color: inherit;
    text-decoration: none;
  }

  .header {
    position: relative;
    display: flex;
    justify-self: center;
    margin: 20px;
    width: 90%;
    z-index: 20;
    font-family: sans-serif;
    color: white;
    border-radius: 20px;
    padding: 14px 22px;


    background: rgba(20, 20, 20, 0.6);
    backdrop-filter: blur(12px); /* Effet verre */
    border: 1px solid rgba(255, 255, 255, 0.1);
  }

  /* Brand */

.brand {
    display: flex;
    align-items: center;
    gap: 12px;
    white-space: nowrap;
}

.brand-logo {
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: white;
    cursor: pointer;
    transition: all 0.2s;
    width: 50px;
    height: 50px;
    border-radius: 8px;
    font-size: 1.2rem;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 0 10px;
    opacity: 0.5;
}
.brand-logo:hover { background: rgba(255, 255, 255, 0.25); transform: scale(1.05); }

  .brand-title {
    font-size: 0.8rem;
    letter-spacing: 0.18em;
    text-transform: uppercase;
    color: #d4d4d4;
  }

  /* Nav = rang√©e de boutons */

  .nav {
    margin-left: auto;
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
  }

  .nav-link {
    display: inline-flex;
    align-items: center;
    justify-content: center;

    padding: 10px 20px;
    border-radius: 999px;
    background: rgba(255, 255, 255, 0.1);

    font-weight: 900;
    letter-spacing: 0.14em;
    text-transform: uppercase;
    cursor: pointer;

    transition:
      transform 0.18s ease-out,
      background 0.18s ease-out,
      box-shadow 0.18s ease-out;
  }

  /* Hover : grossit + gris plus clair */
.nav-link:hover { background: rgba(255, 255, 255, 0.25); transform: scale(1.05); }


  .nav-link:active {
    transform: scale(0.97);
  }

  .nav-link.is-active {
    background: rgba(220, 220, 220, 0.35);
  }

  /* Responsive */

  @media (max-width: 640px) {
    .header-panel {
      flex-direction: column;
      align-items: stretch;
      gap: 10px;
    }

    .brand {
      justify-content: center;
    }

    .nav {
      justify-content: center;
    }
  }
</style>



