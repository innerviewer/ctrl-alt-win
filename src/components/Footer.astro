---
const {
  logoText = 'CAW',
  shortcutText = 'CTRL+ALT+WIN',
  links = [
    { href: '/mentions-legales', label: 'MENTIONS LÉGALES' },
    { href: '/contact', label: 'CONTACT' },
    { href: '/a-propos', label: 'À PROPOS' },
  ],
} = Astro.props;
---
<footer class="caw-footer">
  <div class="footer-container">

    <div class="footer-left">
      <span class="footer-logo">{logoText}</span>
      <span class="footer-shortcut">{shortcutText}</span>
    </div>

    <div class="footer-right">
      {links.map((link: any) => {
        return (
          <a href={link.href} class="footer-btn">
            {link.label}
          </a>
        );
      })}
    </div>

  </div>
</footer>

<style>
  .caw-footer {
    width: 100%;
    background: #000;
    padding: 25px 0;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    display: flex;
    justify-content: center;
  }

  .footer-container {
    width: 95%;
    max-width: 1600px;
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .footer-left {
    display: flex;
    align-items: center;
    gap: 12px;
  }

  .footer-logo {
    padding: 8px 22px;
    border: 1px solid white;
    border-radius: 999px;
    font-family: monospace;
    font-size: 14px;
    color: white;
    letter-spacing: 2px;
  }

  .footer-shortcut {
    color: white;
    font-size: 12px;
    letter-spacing: 3px;
    font-family: monospace;
  }

  .footer-right {
    display: flex;
    gap: 12px;
  }

  .footer-btn {
    padding: 10px 26px;
    border: 1px solid white;
    border-radius: 999px;
    color: white;
    text-decoration: none;
    font-size: 13px;
    letter-spacing: 2px;
    font-family: monospace;
    transition: 0.2s;
  }

  .footer-btn:hover {
    background: white;
    color: black;
  }
</style>

