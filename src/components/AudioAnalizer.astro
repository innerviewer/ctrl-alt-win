<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
<div id="container">
    <canvas id="visualizer"></canvas>

    <div id="ui-layer">

        <div class="upload-zone">
            <label for="audioFile" class="btn upload-btn">
                <i class="fas fa-folder-open"></i> Choisir un fichier
            </label>
            <input type="file" id="audioFile" accept="audio/*">
            <span id="fileName">Aucun fichier</span>
        </div>

        <div class="controls-container">
            <button id="playPauseBtn" class="btn icon-btn" disabled>
                <i class="fas fa-play"></i>
            </button>

            <div class="timeline-wrapper">
                <span id="currentTime">0:00</span>
                <input type="range" id="progressBar" value="0" min="0" step="0.1">
                <span id="totalTime">0:00</span>
            </div>
        </div>
    </div>

    <audio id="audioPlayer">
    <script src="../assets/audioAnalizer.js"></script>
</div>

<style>
    * {
    box-sizing: border-box;
    user-select: none; /* Évite de sélectionner le texte en cliquant partout */
}

body, html {
    margin: 0;
    padding: 0;
    width: 100%;
    height: 100%;
    background-color: #000;
    overflow: hidden;
    font-family: sans-serif;
    color: white;
}

#visualizer {
    display: block;
    position: absolute;
    top: 0;
    left: 0;
    z-index: 1;
}

#ui-layer {
    position: absolute;
    bottom: 40px;
    left: 50%;
    transform: translateX(-50%);
    width: 90%;
    max-width: 700px;
    z-index: 10;

    background: rgba(20, 20, 20, 0.6);
    backdrop-filter: blur(12px); /* Effet verre */
    padding: 20px 30px;
    border-radius: 20px;
    border: 1px solid rgba(255, 255, 255, 0.1);
    box-shadow: 0 10px 40px rgba(0,0,0,0.6);

    display: flex;
    flex-direction: column;
    gap: 15px;
}

.upload-zone {
    display: flex;
    align-items: center;
    gap: 15px;
    font-size: 0.9rem;
    color: #aaa;
}

.controls-container {
    display: flex;
    align-items: center;
    gap: 20px;
}

/* Boutons */
.btn {
    background: rgba(255, 255, 255, 0.1);
    border: none;
    color: white;
    cursor: pointer;
    transition: all 0.2s;

}
.btn:hover { background: rgba(255, 255, 255, 0.25); transform: scale(1.05); }
.btn:active { transform: scale(0.95); }

.upload-btn {
    padding: 8px 16px;
    border-radius: 20px;
    font-weight: bold;
}

.icon-btn {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    font-size: 1.2rem;
    display: flex;
    justify-content: center;
    align-items: center;
}
.icon-btn:disabled { opacity: 0.3; cursor: not-allowed; }

/* Timeline */
.timeline-wrapper {
    flex-grow: 1;
    display: flex;
    align-items: center;
    gap: 10px;
    font-family: monospace;
    font-size: 0.9rem;
}

input[type=range] {
    flex-grow: 1;
    cursor: pointer;
    accent-color: #ffffff; /* Couleur de la barre sur Chrome/Edge */
}
/* Input file caché */
input[type="file"] { display: none; }

input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  visibility: hidden;
}

input[type="range"]::-moz-range-thumb {
  visibility: hidden;
}
</style>